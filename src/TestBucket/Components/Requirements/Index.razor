@attribute [Authorize()]
@page "/{TenantId}/Requirements"
@using Humanizer
@using TestBucket.Components.Layout
@using TestBucket.Components.Requirements.Controls
@using TestBucket.Domain.Requirements.Models
@using TestBucket.Domain.Teams.Models
@layout AppLayout

<TenantRedirect />

<MudSplitter Style="height: 100%" Color="Color.Primary" Bordered="false" Dimension="20" EnableMargin="false">
    <StartContent>
        <RequirementSpecTableView/>
    </StartContent>

    <EndContent>
        <MudStack Class="pa-3">
            <UploadRequirementSpecification/>
        </MudStack>
    </EndContent>
</MudSplitter>

@code {
    [Parameter] public string TenantId { get; set; } = "";
    [CascadingParameter] TestProject? Project { get; set; }
    [CascadingParameter] Team? Team { get; set; }

    private Team? _team;
    private TestProject? _project;

    protected override void OnParametersSet()
    {
        if (_project != Project || _team != Team)
        {
            _project = Project;
            _team = Team;
        }
    }
}
