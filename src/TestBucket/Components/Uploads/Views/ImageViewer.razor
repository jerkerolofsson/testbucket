@using TestBucket.Components.Uploads.Services
@inject AttachmentsService controller

@if (Resource is not null)
{
    string src = $"/api/resources/{Resource.Id}";
    if (Resource.ContentType.Contains("svg"))
    {
        <MudImage Src="@src" Style="width: 256px; height: 256px; color: orange" />
    }
    else
    {
        <MudImage Src="@src" Style="max-width: 70vw; max-height: 70vh" />
    }
}

@code {
    [Parameter] public FileResource? Resource { get; set; }
}
