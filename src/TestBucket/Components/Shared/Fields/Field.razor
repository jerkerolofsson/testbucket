
<MudPaper Class="pa-3" Style="border: solid 1px rgba(0,0,0,0.055); background: rgba(0,0,0,0.1)">
    <MudStack Spacing="@Spacing" Row="@Row">
        @ChildContent
    </MudStack>
</MudPaper>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool Row { get; set; }
    [Parameter] public int Spacing { get; set; } = 0;
}
