<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <EnableMSTestRunner>true</EnableMSTestRunner>
        <TestingPlatformDotnetTestSupport>true</TestingPlatformDotnetTestSupport>
        <TestingPlatformShowTestsFailure>true</TestingPlatformShowTestsFailure>

    </PropertyGroup>

    <PropertyGroup>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <Description>MSUnit v4 extension with standardized attributes for metadata definition</Description>
        <Title>TestBucket.Traits.MSTest</Title>
        <Authors>Jerker Olofsson</Authors>
        <Company>Jerker Olofsson</Company>
        <PackageId>TestBucket.Traits.MSTest</PackageId>
        <Version>1.0.0</Version>
        <WebPage>https://github.com/jerkerolofsson/testbucket/blob/main/doc/traits.md</WebPage>
    </PropertyGroup>
    <ItemGroup>
        <None Include="readme.md" Pack="true" PackagePath="\" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="MSTest.TestFramework" Version="4.0.0-preview.25372.6" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\TestBucket.Traits.Core\TestBucket.Traits.Core.csproj" />
    </ItemGroup>

</Project>