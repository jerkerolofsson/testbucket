@using TestBucket.Components.Shared.Profile
@using TestBucket.Contracts.Localization
@using TestBucket.Domain.Shared
@inject IAppLocalization loc

@if (Entity is not null)
{
    <Field Row>
        <FieldHeader>@loc.Shared["created"]</FieldHeader>
        <MudSpacer/>
        <MudStack Row AlignItems="AlignItems.Center">
            <UserProfileImage Size="Size.Small" UserName="@Entity.CreatedBy" />
            <div>@Entity.Created.Humanize()</div>
        </MudStack>
    </Field>
}

@code {
    [Parameter] public ProjectEntity? Entity { get; set; }
}
