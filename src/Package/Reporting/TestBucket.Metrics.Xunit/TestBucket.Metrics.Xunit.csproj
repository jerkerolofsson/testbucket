<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

    <PropertyGroup>
        <PackageReadmeFile>readme.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <AssemblyVersion>1.0.0</AssemblyVersion>
        <Description>xunit extension with standardized traits and reporting enrichments</Description>
        <Title>TestBucket.Traits.Xunit</Title>
        <Authors>Jerker Olofsson</Authors>
        <Company>Jerker Olofsson</Company>
        <PackageId>TestBucket.Metrics.Xunit</PackageId>
        <Version>1.0.0</Version>
        <WebPage>https://github.com/jerkerolofsson/testbucket</WebPage>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="xunit.analyzers" Version="1.21.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="xunit.v3.extensibility.core" Version="2.0.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\Traits\TestBucket.Traits.Core\TestBucket.Traits.Core.csproj" />
        <ProjectReference Include="..\..\Traits\TestBucket.Traits.XUnit\TestBucket.Traits.Xunit.csproj" />
    </ItemGroup>
</Project>
