<TestTreeView ShowTestRuns="false"
              ShowTestCases="false"
              ShowTestRunTests="false"
              ShowTestRunPipelines="false"
              ShowTestSuiteFolders="true"
              ShowTestSuites="true"
              Project="@Project" Team="@Team" OnFolderClicked="OnFolderClicked" />

@code {

    [Parameter]
    public EventCallback<TestSuiteFolder> FolderSelected { get; set; }

    [Parameter] public TestProject? Project { get; set; }

    [Parameter] public Team? Team { get; set; }


    private async Task OnFolderClicked(TestSuiteFolder folder)
    {
        await FolderSelected.InvokeAsync(folder);
    }
}
